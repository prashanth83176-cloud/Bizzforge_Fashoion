{
  "version": 2,
  "builds": [
    {
      "src": "backend/app/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "Frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/app/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "Frontend/$1"
    }
  ],
  "env": {
    "GROQ_API_KEY": "@groq_api_key",
    "HUGGINGFACE_API_KEY": "@huggingface_api_key"
  }
}
